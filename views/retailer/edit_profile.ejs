<!DOCTYPE html>
<html>

<head>
	<title> Edit Profile </title>
	<link rel="stylesheet" href="/assets/main_style.css">
</head>

<body>
	<%- include('../includes/header.ejs') %>
		<%- include('../includes/nav_retailer') %>
			<%- include('../includes/aside_retailer') %>
				<section>
					<h1>Edit Profile</h1>
					<form action="/retailer/profile/edit" method="POST" class="form">
						<ul class="form-list">
							<input type="hidden" name="id" value="<%= retailer.retailer_id %>">
							<li>
								<div class="label-block"> <label for="retailer:name">Phone</label> </div>
								<div class="input-box"> <input type="text" id="retailer:phone" name="phone"
										placeholder="Phone" value="<%= retailer.phone %>" required /> </div> <span
									class="error_message"></span>
							</li>
							<li>
								<div class="label-block"> <label for="retailer:email">Email</label> </div>
								<div class="input-box"> <input type="text" id="retailer:email" name="email"
										placeholder="Email" value="<%= retailer.email %>" required /> </div>
								<span class="error_message"></span>
							</li>
							<li>
								<div class="label-block"> <label for="retailer:address">Address</label> </div>
								<div class="input-box"> <textarea type="text" id="retailer:address" name="address"
										placeholder="Address" value="<%= retailer.address %>"></textarea> </div>
							</li>
							<li>
								<!-- <a href="change_password.php"><input type="button" value="Change Password" class="submit_button" /></a> -->
								<input type="submit" value="Update Profile" class="submit_button" /> <span
									class="error_message"></span><span class="confirm_message"> </span>
							</li>
						</ul>
					</form>
				</section>
				<%- include('../includes/footer.ejs') %>
</body>

</html>