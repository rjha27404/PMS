<!DOCTYPE html>
<html>

<head>
	<title> Add Unit </title>
	<link rel="stylesheet" href="/assets/main_style.css">
</head>

<body>
	<%- include('../includes/header.ejs') %>
		<%- include('../includes/nav_manufacturer') %>
			<%- include('../includes/aside_manufacturer') %>
				<section>
					<h1>Add Unit</h1>
					<form action="/manufacturer/unit/create" method="POST" class="form">
						<ul class="form-list">
							<li>
								<div class="label-block"> <label for="unitName">Unit Name</label> </div>
								<div class="input-box"> <input type="text" id="unitName" name="name"
										placeholder="Unit Name" value="" required /> </div> <span
									class="error_message"></span>
							</li>
							<li>
								<div class="label-block"> <label for="unitDetails">Details</label> </div>
								<div class="input-box"><textarea id="unitDetails" name="details"
										placeholder="Details"></textarea> </div>
							</li>
							<li>
								<input type="submit" value="Add Unit" class="submit_button" /> <span
									class="error_message"></span><span class="confirm_message"> </span>
							</li>
						</ul>
					</form>
				</section>
				<%- include('../includes/footer.ejs') %>
</body>

</html>