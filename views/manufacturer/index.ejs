<!DOCTYPE html>
<html>

<head>
	<title> Supplier: Home </title>
	<link rel="stylesheet" href="/assets/main_style.css">
</head>

<body>
	<%- include('../includes/header.ejs') %>
		<%- include('../includes/nav_manufacturer') %>
			<%- include('../includes/aside_manufacturer') %>
				<section>
					Welcome
					
					<article>
						<h2>My Profile</h2>
						<table class="table_displayData">
							<tr>
								<th>Name</th>
								<th>Email</th>
								<th>Phone</th>
								<th>Username</th>
								<th> Edit </th>
							</tr>
							<% profile.forEach(function(item){ %>
							<tr>
								<td>
									<%= item.man_name %>
								</td>
								<td>
									<%= item.man_email %>
								</td>
								<td>
									<%= item.man_phone %>
								</td>
								<td>
									<%= item.username %>
								</td>
								<td>
									<a href="/manufacturer/profile/edit/<%= item.man_id %>"><img
											src="/assets/images/edit.png" alt="edit" /></a>
								</td>
							</tr>
								<% }) %>
						</table>
					</article>
					<article>
						<h2>Recent Orders</h2>
						<table class="table_displayData" style="margin-top:20px;">
							<tr>
								<th> Order ID </th>
								<th> Date </th>
								<th> Approved </th>
								<th> Status </th>
								<th> Details </th>
							</tr>
							<% totalOrder.forEach(function(item){ %>

								<tr>
									<td>
										<%= item.order_id %>
									</td>
									<td>
										<%= item.date %>
									</td>
									<td>
										<% if(item.approved==1) {%>
											Approved
										<%}else{%>
											Not Approved
										<%}%>
									</td>
									<td>
										<% if(item.status==1) {%>
											Completed
										<%}else{%>
											Pending
										<%}%>
									</td>
									<td>
										<a href="/manufacturer/order/view/<%= item.order_id %>">Details</a>
									</td>
									
								</tr>
								<% }) %>
									
						</table>
					</article>
				</section>
				<%- include('../includes/footer.ejs') %>
</body>

</html>