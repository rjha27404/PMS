<!DOCTYPE html>
<html>
<head>
	<title> View Supplier </title>
	<link rel="stylesheet" href="/assets/main_style.css" >
	<script language="JavaScript">
	function toggle(source) {
		checkboxes = document.getElementsByName('chkId[]');
		for(var i=0, n=checkboxes.length;i<n;i++) {
			checkboxes[i].checked = source.checked;
		}
	}
	</script>
</head>
<body>
	<%- include('../includes/header.ejs') %>
		<%- include('../includes/nav_admin') %>
			<%- include('../includes/aside_admin') %>
	<section>
		<h1>View Supplier</h1>
		<form action="" method="POST" class="form">
		<table class="table_displayData">
			<tr>
				<!-- <th> <input type="checkbox" onClick="toggle(this)" /> </th> -->
				<th>Sr. No.</th>
				<th>Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Username</th>
				<th> Edit </th>
			</tr>
			<% manufacturer.forEach(function(item){ %>
			
				<tr>
					<td>
						<%= item.man_id %>
					</td>
					<td>
						<%= item.man_name %>
					</td>
					<td>
						<%= item.man_email %>
					</td>
					<td>
						<%= item.man_phone %>
					</td>
					<td>
						<%= item.username %>
					</td>
					<td>
						<a href="/admin/manufacturer/del/<%= item.man_id %>">
							<span style="color: red;">X</span></a>&nbsp;
						<a href="/admin/manufacturer/edit/<%= item.man_id %>"><img src="/assets/images/edit.png" alt="edit" /></a>
					</td>
				</tr>
				<% }) %>
		</table>
		<input type="submit" value="Delete" class="submit_button"/>
		</form>
	</section>
	<%- include('../includes/footer.ejs') %>
</body>
</html>