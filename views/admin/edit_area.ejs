
<!DOCTYPE html>
<html>
<head>
	<title> Update Category </title>
	<link rel="stylesheet" href="/assets/main_style.css" >
</head>
<body>
	<%- include('../includes/header.ejs') %>
		<%- include('../includes/nav_admin') %>
			<%- include('../includes/aside_admin') %>
	<section>
		<h1>Update Area</h1>
		<form action="/admin/area/edit/<%= area.area_id %>" method="POST" class="form">
		<ul class="form-list">
		<li>
			<div class="label-block"> <label for="areaName">Area Name</label> </div>
			<div class="input-box"> <input type="text" id="areaName" name="name" placeholder="Area Name" value="<%= area.area_name %>" required /> </div> <span class="error_message"></span>
		</li>
		<li>
			<div class="label-block"> <label for="areaCode">Area Code</label> </div>
			<div class="input-box"> <input type="text" id="area_code" name="area_code" placeholder="Area Code" value="<%= area.area_code %>" required /> </div>
		</li>
		<li>
			<input type="submit" value="Update Area" class="submit_button" /> <span class="error_message"></span><span class="confirm_message"></span>
		</li>
		</ul>
		</form>
	</section>
	<%- include('../includes/footer.ejs') %>
</body>
</html>